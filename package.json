{
  "name": "webmail-client",
  "version": "1.0.0",
  "description": "A modern webmail client UI with a full-featured backend",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch server/src/index.ts",
    "dev:worker": "tsx watch server/src/workers/index.ts",
    "build": "vite build && tsc -p server/tsconfig.json",
    "start": "pm2 start server/ecosystem.config.cjs --env production",
    "stop": "pm2 stop server/ecosystem.config.cjs"
  },
  "keywords": [
    "react",
    "tailwind",
    "typescript",
    "webmail",
    "fastify",
    "postgres",
    "redis"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@fastify/websocket": "^10.0.1",
    "bullmq": "^5.10.2",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "imapflow": "^1.0.160",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.4",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "pino-pretty": "^11.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-window": "^1.8.11",
    "sanitize-html": "^2.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "tsx": "^4.16.2",
    "@types/react-dom": "^18.3.0",
    "@types/sanitize-html": "^2.11.0",
    "@types/ws": "^8.5.11",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  }
}